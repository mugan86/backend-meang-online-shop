{
    "version": 2,
    "builds": [
        {
            "src": "build/app.js",
            "use": "@now/node",
            "config": {
                "includeFiles": [
                    "build/schema/**/*.graphql"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "build/app.js"
        }
    ]
}